<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.server.dao.SongMapper">
<!--    查询所有歌曲-->
    <select id="getAllSong" resultType="song">
        select * from song;
    </select>

    <select id="getSongBySingerId" resultType="song">
        select * from song where singer_id = #{id}
    </select>
</mapper>
